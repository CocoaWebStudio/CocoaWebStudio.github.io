#nav.container-fluid
  b-navbar.row(toggleable="md")
    b-navbar-toggle(target="nav_collapse")
    b-navbar-brand(to="/")
      img(src="~/assets/SmarensolLogo.svg" alt="Smaresol" class='img-fluid' style="width:200px;")
    b-collapse(is-nav id="nav_collapse")
      b-navbar-nav.ml-auto
        b-nav-item(to="/company/about-us") {{ $t('menu.company')}}
        b-nav-item-dropdown(:text="$t('menu.productLines.title')" right)
          b-dropdown-item(to="/product-lines/distribution") {{ $t('menu.productLines.distribution') }}
          b-dropdown-item(to="/product-lines/substations") {{ $t('menu.productLines.substations') }}
          b-dropdown-item(to="/product-lines/transmission-lines") {{ $t('menu.productLines.transmition') }}
          b-dropdown-item(to="/product-lines/industrial") {{ $t('menu.productLines.industrial') }}
        b-nav-item(:to="localePath('customers')") {{ $t('menu.customers') }}
        b-nav-item(:to="localePath('contact-us')") {{ $t('menu.contactUs') }}
        b-nav-item-dropdown(:text="$i18n.locale" right)
          b-dropdown-item(
            v-for="locale in $i18n.locales",
            v-if="locale.code !== $i18n.locale",
            :key="locale.code",
            :to="switchLocalePath(locale.code)",) {{ locale.name }}
